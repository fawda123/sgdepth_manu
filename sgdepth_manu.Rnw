names(wtn_irl) <- c('Fval', 'df1', 'df2', 'pval')
wtn_choc <- summary(lm(light ~ seg, data = choc))$fstatistic
wtn_choc <- c(wtn_choc, pf(wtn_choc[1], wtn_choc[2], wtn_choc[3],lower.tail=F))
names(wtn_choc) <- c('Fval', 'df1', 'df2', 'pval')

# tukey comps
